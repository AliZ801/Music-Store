@{
    ViewData["Title"] = "Genres List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="cus-border rounded text-success">
    <div class="row p-1">
        <div class="col-6">
            <h3 class="pl-1">Genres List</h3>
        </div>
        <div class="col-6 text-right">
            <a asp-action="AddGenre" class="btn btn-outline-success">
                <i class="fas fa-plus"></i> &nbsp; New Genre
            </a>
        </div>
    </div>
    <br />
    <table id="tblData" class="table table-striped table-bordered text-success" style="width:100%">
        <thead>
            <tr class="text-center">
                <th>Sr. No.</th>
                <th>Genre</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>

@section Scripts{
    <script src="~/js/genres.js"></script>
    <style>
        .cus-border {
            border: 4px solid green;
        }

        .row {
            margin-left: 0;
            margin-right: 0;
        }
    </style>
}